<Page
    x:Class="Phantom_of_the_West.User_Interface.Menus.MainOptionsMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Phantom_of_the_West.User_Interface.Menus"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

	<Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
		<ListView x:Name="listOptions" SelectionMode="None" IsItemClickEnabled="True" ItemClick="listOptions_ItemClick">
			<ListViewItem x:Name="itemSaveGame">
				<TextBlock x:Name="blockSaveGame">
					Save
				</TextBlock>
			</ListViewItem>
			<ListViewItem x:Name="itemLoadGame">
				<TextBlock x:Name="blockLoadGame">
					Load
				</TextBlock>
			</ListViewItem>
			<ListViewItem x:Name="itemNewGame">
				<TextBlock x:Name="blockNewGame">
					New Game
				</TextBlock>
			</ListViewItem>
			<ListViewItem x:Name="itemVoiceover">
				<ToggleSwitch x:Name="switchVoiceover" Header="Voice-Over" />
			</ListViewItem>
		</ListView>
	</Grid>
</Page>
