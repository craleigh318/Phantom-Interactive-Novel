<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:rowCount="2">
    tools:context="com.christopherraleigh.phantomofthewest.MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:columnCount="1"
        android:rowCount="2"
        android:layout_rowWeight="1">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:adjustViewBounds="true"
            android:contentDescription="@string/imageViewDescription"
            android:scaleType="fitStart" />

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_row="1"
            android:scrollbars="vertical"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_gravity="fill_horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </ScrollView>
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:columnCount="4"
        android:rowCount="1">

        <Button
            android:id="@+id/buttonPrevious"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:onClick="onButtonPreviousClick"
            android:text="@string/buttonPreviousText" />

        <Button
            android:id="@+id/buttonOK"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:onClick="onButtonOKClick"
            android:text="@string/buttonOKText" />

        <Button
            android:id="@+id/buttonNext"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:onClick="onButtonNextClick"
            android:text="@string/buttonNextText" />

        <Button
            android:id="@+id/buttonMenu"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:onClick="onButtonMenuClick"
            android:text="@string/buttonMenuText" />
    </GridLayout>
</GridLayout>
